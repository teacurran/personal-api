<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	 	<modelVersion>4.0.0</modelVersion>


		<artifactId>personal-api-bom</artifactId>
		<groupId>com.wirelust.personal-api</groupId>
		<version>1.0-SNAPSHOT</version>

	<packaging>pom</packaging>
	<scm>
		<connection>scm:git:https://github.com/teacurran/personal-api.git</connection>
		<developerConnection>scm:git:https://github.com/teacurran/personal-api.git</developerConnection>
		<url>scm:git:https://github.com/teacurran/personal-api.git</url>
	</scm>

	<properties>
		<build.number>SNAPSHOT</build.number>
		<build.timestamp>${maven.build.timestamp}</build.timestamp>

		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>

		<version.arquillian>1.1.5.Final</version.arquillian>
		<version.deltaspike>1.3.0</version.deltaspike>
		<version.ee>1.0.2.Final</version.ee>
		<version.findbugs>3.0.0</version.findbugs>
		<version.findbugs.maven>3.0.0</version.findbugs.maven>
		<version.hibernate>4.3.7.Final</version.hibernate>
		<!-- Hibernate Tools requires a different version than what is shipped with the app serever-->
		<version.hibernate.tools>4.3.1-CR1</version.hibernate.tools>
		<version.hibernate.tools.hibernate>4.0.1.Final</version.hibernate.tools.hibernate>
		<version.junit>4.12</version.junit>
		<version.resteasy>3.0.10.Final</version.resteasy>
		<version.slf4j>1.7.10</version.slf4j>
		<version.mysql.connector>5.1.28</version.mysql.connector>
		<version.wildfly>8.2.0.Final</version.wildfly>

		<sonar.host.url>http://127.0.0.1:9000/</sonar.host.url>
		<sonar.jdbc.username>root</sonar.jdbc.username>
		<sonar.jdbc.password>root</sonar.jdbc.password>
		<sonar.jdbc.url><![CDATA[jdbc:mysql://localhost:3306/sonar?useUnicode=true&characterEncoding=utf8&rewriteBatchedStatements=true]]></sonar.jdbc.url>
	</properties>

	<modules>
		<module>personal-api</module>
		<module>personal-api-db</module>
		<module>clients</module>
	</modules>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.jboss.spec</groupId>
				<artifactId>jboss-javaee-7.0</artifactId>
				<version>${version.ee}</version>
				<scope>provided</scope>
				<type>pom</type>
			</dependency>
			<dependency>
				<groupId>org.jboss.resteasy</groupId>
				<artifactId>resteasy-jaxrs</artifactId>
				<version>${version.resteasy}</version>
				<scope>provided</scope>
			</dependency>
			<dependency>
				<groupId>org.jboss.resteasy</groupId>
				<artifactId>resteasy-cdi</artifactId>
				<version>${version.resteasy}</version>
				<scope>provided</scope>
			</dependency>
			<dependency>
				<groupId>org.jboss.resteasy</groupId>
				<artifactId>resteasy-jackson2-provider</artifactId>
				<version>${version.resteasy}</version>
				<scope>provided</scope>
			</dependency>
			<dependency>
				<groupId>org.jboss.resteasy</groupId>
				<artifactId>resteasy-multipart-provider</artifactId>
				<version>${version.resteasy}</version>
				<scope>provided</scope>
			</dependency>
			<dependency>
				<groupId>org.jboss.resteasy</groupId>
				<artifactId>resteasy-validator-provider-11</artifactId>
				<version>${version.resteasy}</version>
				<scope>provided</scope>
			</dependency>
			<dependency>
				<groupId>org.jboss.arquillian</groupId>
				<artifactId>arquillian-bom</artifactId>
				<version>${version.arquillian}</version>
				<scope>import</scope>
				<type>pom</type>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>2.5.1</version>
				</plugin>

				<plugin>
					<artifactId>maven-war-plugin</artifactId>
					<version>2.5</version>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
</project>